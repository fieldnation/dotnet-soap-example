@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Create Work Order Location</h2>
        <p>
            A work order location is required when creating work orders with Field Nation.
            Be sure to create a location before creating a work order.
        </p>
        <p><a class="btn btn-default" href="/locations/create">Create Location &raquo;</a></p>
    </div>

    <div class="col-md-4">
        <h2>Create Work Order</h2>
        <p>
            Create a My Computer Works work order and publish on Field Nation.
        </p>
        <p><a class="btn btn-default" href="/workorders/create">Create Work Order &raquo;</a></p>
    </div>

    <div class="col-md-4">
        <h2>View Work Orders</h2>
        <p>
            Take a look at your work orders.
        </p>
        <p><a class="btn btn-default" href="/workorders">View Work Order &raquo;</a></p>
        <p><a class="btn btn-default" href="//app.fieldnation.com">Go to Field Nation &raquo;</a></p>
    </div>
</div>
